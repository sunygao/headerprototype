//CTAs
.cta {
  display: inline-block;
  color: #fff;
  text-transform: uppercase;
  text-align: center;
  circularBlack();

  .icon {
    line-height: 0;
    display: inline-block;
    vertical-align: middle;
  }
  
  &.sml {
    font-size: 11px;
    min-width: 108px;
    vendor(border-radius, 20px);
    padding: 11px 15px;
  }
  
  &.lrg {
    min-width: 240px;
    font-size: 14px;
    padding: 18px 23px;
    vendor(border-radius, 30px);
  }
  
  &.play {
    .icon {
      font-size: 1.1em;
      margin-right: 0.4em;
    }
  }
  
   &.rewind {
    .icon {
      font-size: 1.3em;
      margin-left: -0.2em;
    }
  }
  
  &.more {
    min-width: 0px;
    vendor(border-radius, 100%);
    
    span {
      position: relative;
       top: -.3em;
    }
    
    &.sml {
      padding-left: 13px;
      padding-right: 13px;
    }
    
    &.lrg {
      padding-left: 19px;
      padding-right: 19px;
    }
  }
}


