#styleguide {
  circularBook();
  
  #content,
  #content > div, #content > section,
  h1 {
    opacity: 1;
    visibility: visible;
  }
  
  #content {
    padding: 60px 0px;
    margin: 0 30px;
  }
  
  header {    
    h1 {
      font-size: 30px;
      margin-bottom: 15px;
    }
    
    h2 {
      font-size: 15px;

      .med,
      .sml {
        display: none;
      }
    }
  }
  
  header,
  .styleguide_wrapper {
    padding: 0 0 40px;
    margin-bottom: 40px;
    border-bottom: 1px solid #ccc;
    
    .section_headline {
      font-size: 18px;
      margin-bottom: 30px;
    }
  }
  
  .label {
    font-size: 14px;
    line-height: 1.5;
    margin-top: 10px;
  }
  
  .swatch_container {
    display: inline-block;
    width: 100px;
    margin: 0 20px 0 0;
    text-align: center;
    
    .swatch {
      width: 100px;
      height: 100px;
    }
  }
  
  li {
    display: inline-block;
    vertical-align: top;
    margin: 0 40px 20px 0;
  }  
  
  .bold {
    circularBold();
  }
  
  #buttons {
    a {
      color: #000;
    }
  }
  
  #fonts {
    p {
      margin-bottom: 10px;
    }
  }
  
  #text {
    li {
      margin-bottom: 60px;
      display: block;
      
      .label {
        margin-top: 0;
      }
    }
    
    p {
      width: 400px;
    }
  }
}

