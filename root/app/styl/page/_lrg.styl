/**
 * ALL LARGE views imported.
 * Media query breakpoint is managed at the app.scss level.
 */

html {
	font-size: base-font-size;
	min-height: 100%;
}

// VIEWS
@import "main/_lrg";
@import "pages/index/_lrg";
@import "pages/about/_lrg";

#numbers {
	// min-height: 2000px;
	canvas {
		width: 100%;
		height: 100%;
		position: absolute;
	}
	#bg_preview {
		position: fixed;
		display: none;
	}
	
	#text_container {
		.num {
			display: none;
			font-family: "bornregular";
			font-size: 30px;
		}
		
		#numbers_container {
			margin-top: 50px;
			width: 700px;
			height: 500px;
			position: fixed;
			right: 0;
			top: 50px;
			overflow: hidden;
				
			canvas {
				position: absolute;
				z-index: 2;
			}
			
			#image {
				background: url('../static/img/test_header.jpg') 0 0 repeat;
				background-size: 100% 100%;
				width: 100%;
				height: 150%;
				position: absolute;
				//left: 50%;
				top: 0;
			}
		}
	}
	
	#colors {
		margin: 50px 0;
		li {
			display: inline-block;
			padding: 0px 20px;
		}
		.swatch {
			width: 50px;
			height: 50px;
		}
		.d4faef {
			.swatch {
				background: #d4faef;
			}
		}
		.f1d4fa {
			.swatch {
				background: #f1d4fa;
			}
		}
		.d5d4fa {
			.swatch {
				background: #d5d4fa;
			}
		}
		.faa8a8 {
			.swatch {
				background: #faa8a8;
			}
		}
	}
}