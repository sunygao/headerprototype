/**
 * ALL LARGE views imported.
 * Media query breakpoint is managed at the app.scss level.
 */

#index {
	.header {
		width: 100%;
		height: 500px;
		//overflow: hidden;
		position: relative;
		background: #000;
	}
	
	#composite_canvas {
		bottom: 0;
		//top: 50%;
   	 	//-webkit-transform: translateY(-50%);
	}
	
	canvas,
	#svg {
		background: transparent;
		position: absolute;	
	}
	#image {
		position: absolute;
		top: 0;
	}
	#svg_defs {
		visibility: hidden;
		position: absolute;
	}
	
	article {
		width: 50%;	
		position: absolute;
		bottom: 0;
		transition: fill .1s ease-in;
		-webkit-filter: drop-shadow( -5px -5px 5px #000 );
		 	
		image {
			opacity: 0;
			transition: opacity .5s ease-in;
		}
			
		.active {
			image {
				opacity: 1;
			}
		}
	}
	
	#triangles1 {
		fill: transparent;
		stroke: rgb(254, 91, 10);
		stroke-width: 1;
		

		&.active {
			fill: rgb(254, 91, 10);
		}
	}
}

