/**
 * ALL LARGE views imported.
 * Media query breakpoint is managed at the app.scss level.
 */

#index {
	.header {
		width: 100%;
		height: 500px;
		//overflow: hidden;
		position: relative;
		background: #000;
	}
	
	#composite_canvas {
		bottom: 0;
		//top: 50%;
   	 	//-webkit-transform: translateY(-50%);
	}
	
	canvas,
	#svg {
		background: transparent;
		position: absolute;	
	}
	
	#svg_container {
		position: absolute;
		width: 100%;
		height: 500px;
		top: 0;
		overflow: hidden;
		//background: #fff;
		
		svg {
			position: absolute;
			//opacity: 0;
			bottom: -5px;
		}
		
		img {
			width: 50%;
			clip-path: polygon(626px 463px,765px 236px,687px 31px,271px 100px,70px 10px,49px 250px,133px 406px,374px 462px,529px 393px);
			
		}
		
		#triangles {
			//width: 50%;
			fill: rgb(254, 91, 10);
			//fill: transparent;
			stroke: rgb(254, 91, 10);
			stroke-width: 1;
			transition: fill .1s ease-in;
			 -webkit-filter: drop-shadow( -5px -5px 5px #000 );

			&.active {
				fill: rgb(254, 91, 10);
			}
		}
		
		#triangles_expanded {
			opacity: 0;
		}
	}
}

